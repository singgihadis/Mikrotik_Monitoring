<html>
  {{> head}}
  <body class="dns">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-12">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      Pengaturan
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    Pengaturan
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-12">
                        <form id="form_pengaturan" class="text-left">
                          <div class="row">
                            <div class="col-md-6">
                              <div class="form-group">
                                <label class="control-label">
                                  Judul Website
                                </label>
                                <input id="title" name="title" type="text" class="form-control" placeholder="Judul website" />
                              </div>
                              <div class="form-group">
                                <label class="control-label">
                                  Icon Website
                                </label>
                                <div class="row">
                                  <div class="col-md-8">
                                    <div class="custom-file">
                                      <input type="file" class="custom-file-input" id="file_favicon" name="file_favicon" accept="image/jpeg, image/png">
                                      <label class="custom-file-label" for="file_favicon">Pilih Gambar</label>
                                    </div>
                                  </div>
                                  <div class="col-md-4">
                                    <img id="favicon" name="favicon" style="max-width:100%;width:auto;" />
                                  </div>
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="control-label">
                                  Logo Website
                                </label>
                                <div class="row">
                                  <div class="col-md-8">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="file_logo" name="file_logo" accept="image/jpeg, image/png">
                                        <label class="custom-file-label" for="icon_website">Pilih Gambar</label>
                                    </div>
                                  </div>
                                  <div class="col-md-4">
                                    <img id="logo" name="logo" style="max-width:100%;width:auto;" />
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div class="form-group">
                                <label class="control-label">
                                  Nama Bank
                                </label>
                                <input id="bank" name="bank" type="text" class="form-control" placeholder="Nama Bank" />
                              </div>
                              <div class="form-group">
                                <label class="control-label">
                                  Alamat Website
                                </label>
                                <input id="website" name="website" type="text" class="form-control" placeholder="Nama Bank" />
                              </div>
                              <div class="form-group">
                                <label class="control-label">
                                  Email
                                </label>
                                <input id="email" name="email" type="email" class="form-control" placeholder="Email" />
                              </div>
                              <div class="form-group">
                                <label class="control-label">
                                  No Whatsapp
                                </label>
                                <input id="no_wa" name="no_wa" type="text" class="form-control" placeholder="No Whatsapp" />
                              </div>
                            </div>
                          </div>
                          <div class="text-right">
                            <button type="submit" class="btn btn-primary">Simpan</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/pengaturan.js"></script>
  </body>
</html>
