<html>
  {{> head}}
  <body class="dns">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-12">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      Pengaturan
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    Pengaturan
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-12">
                        <form id="form_pengaturan" class="text-left">
                          <div class="form-group">
                            <label class="control-label">
                              Judul Website
                            </label>
                            <input id="title" name="title" type="text" class="form-control" placeholder="Judul website" />
                          </div>
                          <div class="form-group">
                            <label class="control-label">
                              Icon Website
                            </label>
                            <div class="custom-file">
                                <label class="custom-file-label" for="icon_website">Pilih logo</label>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="control-label">
                              Logo Website
                            </label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="icon_website" name="icon_website" accept="image/jpeg, image/png">
                                <label class="custom-file-label" for="icon_website">Pilih logo</label>
                            </div>
                          </div>
                          <div class="text-right">
                            <button type="submit" class="btn btn-primary">Simpan</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/pengaturan.js"></script>
  </body>
</html>
