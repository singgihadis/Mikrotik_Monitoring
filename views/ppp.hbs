<html>
  {{> head}}
  <body class="dns">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-6">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      PPP
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-sm-6 text-right">
                <div class="widget widget-primary">
                  <div class="widget-wrapper">
                    <div class="widget-style">&nbsp;</div>
                    <div class="widget-content">
                      <div class="text">Total</div>
                      <div class="count" id="total">0</div>
                    </div>
                  </div>
                </div>
                <div class="widget widget-success">
                  <div class="widget-wrapper">
                    <div class="widget-style">&nbsp;</div>
                    <div class="widget-content">
                      <div class="text">Koneksi Aktif</div>
                      <div class="count" id="total_aktif">0</div>
                    </div>
                  </div>
                </div>
                <div class="widget widget-danger">
                  <div class="widget-wrapper">
                    <div class="widget-style">&nbsp;</div>
                    <div class="widget-content">
                      <div class="text">Koneksi Tidak Aktif</div>
                      <div class="count" id="total_tidak_aktif">0</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mt-2">
              <div class="col-md-12">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    PPP
                    <div id="loader_insert_data" class="mt-1 d-inline-block float-right">
                      <span class="fa fa-spin fa-spinner d-table-cell align-middle"></span> <small class="pl-1 d-table-cell align-middle">Memproses data</small>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <form id="form_data" class="text-left">
                          <div class="d-inline-block mr-2">
                            <div class="input-group mb-3">
                              <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Keyword">
                              <div class="input-group-append">
                                <button class="btn btn-primary" type="submit"><span class="fa fa-search"></span></button>
                              </div>
                            </div>
                          </div>
                          <div class="d-inline-block">
                            <select id="is_active" name="is_active" class="form-control">
                              <option value="">Semua Koneksi</option>
                              <option value="1">Aktif</option>
                              <option value="0">Tidak Aktif</option>
                            </select>
                          </div>
                        </form>
                      </div>
                      <div class="col-md-6 text-right">
                        <a href="javascript:void(0);" onclick="cetak(this)" class="btn btn-primary mb-2"><span class="fa fa-file-pdf-o"></span> Cetak Koneksi Tidak Aktif</a>
                      </div>
                    </div>
                    <div class="table-responsive">
                      <table class="table table-striped" id="table_dns_cache">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Password</th>
                            <th>Profile</th>
                            <th>Address</th>
                            <th class="text-center">Active</th>
                          </tr>
                        </thead>
                        <tbody id="listdata">
                          <tr><td colspan="7">Memuat Data ....</td></tr>
                        </tbody>
                      </table>
                    </div>
                    <div class="row">
                      <div class="col-md-4" id="info_page">

                      </div>
                      <div class="col-md-4 text-center" id="pagination">
                      </div>
                      <div class="col-md-4"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/ppp.js"></script>
  </body>
</html>
