<html>
  {{> head}}
  <body class="dns">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-6">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      Hotspot
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-sm-6 text-right">
                <div class="widget widget-success">
                  <div class="widget-wrapper">
                    <div class="widget-style">&nbsp;</div>
                    <div class="widget-content">
                      <div class="text">Active</div>
                      <div class="count" id="total_aktif">0</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" id="user-tab" data-toggle="tab" href="#tab_user">User</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="active-tab" data-toggle="tab" href="#tab_active">Active</a>
                  </li>
                </ul>
                <div class="tab-content">
                  <div class="tab-pane fade show active" id="tab_user">
                    <form id="form_data" class="text-left mt-2 mb-0">
                      <div class="d-inline-block">
                        <div class="input-group mb-3">
                          <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Keyword">
                          <div class="input-group-append">
                            <button class="btn btn-primary" type="submit"><span class="fa fa-search"></span></button>
                          </div>
                        </div>
                      </div>
                    </form>
                    <div class="table-responsive">
                      <table class="table table-striped" id="table_dns_cache">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Mac Address</th>
                            <th>Profile</th>
                            <th>Comment</th>
                          </tr>
                        </thead>
                        <tbody id="listdata">
                          <tr><td colspan="5">Memuat Data ....</td></tr>
                        </tbody>
                      </table>
                    </div>
                    <div class="row">
                      <div class="col-md-4" id="info_page">

                      </div>
                      <div class="col-md-4 text-center" id="pagination">
                      </div>
                      <div class="col-md-4"></div>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="tab_active">
                    <div class="table-responsive mt-2">
                      <table class="table table-striped" id="table_active">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Server</th>
                            <th>User</th>
                            <th>Address</th>
                            <th>Uptime</th>
                            <th>Iddle Time</th>
                            <th>Comment</th>
                          </tr>
                        </thead>
                        <tbody id="listdata2">
                          <tr><td colspan="7">Memuat Data ....</td></tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/hotspot.js"></script>
  </body>
</html>
