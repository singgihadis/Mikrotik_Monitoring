<html>
  {{> head}}
  <body class="dns">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-12">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      DNS
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    DNS Cache
                    <div id="loader_insert_data" class="mt-1 d-inline-block float-right">
                      <span class="fa fa-spin fa-spinner d-table-cell align-middle"></span> <small class="pl-1 d-table-cell align-middle">Memproses data</small>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <form id="form_data" class="text-left mb-3">
                          <div class="d-inline-block">
                            <div class="input-group">
                              <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Keyword">
                              <div class="input-group-append">
                                <button class="btn btn-primary" type="submit"><span class="fa fa-search"></span></button>
                              </div>
                            </div>
                          </div>
                          <button onclick="export_txt()" id="btn_export_txt" class="btn btn-light d-inline-block mb-1" type="button"><span class="fa fa-file-text-o"></span> Export</button>
                        </form>
                      </div>
                      <div class="col-md-6 text-right">
                      </div>
                    </div>
                    <div class="table-responsive">
                      <table class="table table-striped" id="table_dns_cache">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Data</th>
                            <th>TTL</th>
                          </tr>
                        </thead>
                        <tbody id="listdata">
                          <tr><td colspan="5">Memuat Data ....</td></tr>
                        </tbody>
                      </table>
                    </div>
                    <div class="row">
                      <div class="col-md-4" id="info_page">

                      </div>
                      <div class="col-md-4 text-center" id="pagination">
                      </div>
                      <div class="col-md-4"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/dns.js"></script>
  </body>
</html>
