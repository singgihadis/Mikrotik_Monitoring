<html>
  {{> head}}
  <body class="dashboard">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-12">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      Host
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-4">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    Tambah Host
                  </div>
                  <div class="card-body">
                    <form id="form_monitoring">
                      <div class="form-group">
                        <label>Nama Client</label>
                        <input type="text" class="form-control" id="nama" name="nama" placeholder="Nama" required>
                      </div>
                      <div class="form-group">
                        <label>Client IP</label>
                        <input type="text" class="form-control" id="client_ip" name="client_ip" placeholder="IP" required>
                      </div>
                      <div class="form-group">
                        <label>Normal Value</label>
                        <div class="input-group">
                          <input type="text" class="form-control number" id="normal_value_start" name="normal_value_start" placeholder="Dari" required>
                          <div class="input-group-prepend">
                            <span class="input-group-text">-</span>
                          </div>
                          <input type="text" class="form-control number" id="normal_value_end" name="normal_value_end" placeholder="Ke" required>
                        </div>
                      </div>
                      <div class="text-right">
                        <button type="submit" class="btn btn-primary"><span class="fa fa-plus"></span> Tambah</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    Data Host
                  </div>
                  <div class="card-body">
                    <form id="form_data" class="text-left">
                      <div class="d-inline-block">
                        <div class="input-group mb-3">
                          <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Nama / Client IP">
                          <div class="input-group-append">
                            <button class="btn btn-primary" type="submit"><span class="fa fa-search"></span></button>
                          </div>
                        </div>
                      </div>
                    </form>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>Nama Client</th>
                            <th>Client IP</th>
                            <th>Normal Value</th>
                            <th>Aksi</th>
                          </tr>
                        </thead>
                        <tbody id="listdata">

                        </tbody>
                      </table>
                    </div>
                    <div class="text-center" id="pagination">
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <br>
            <div class="row" id="listdata_graphic">

            </div>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/monitoring.js"></script>
  </body>
</html>
