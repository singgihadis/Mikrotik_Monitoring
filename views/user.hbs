<html>
  {{> head}}
  <body class="dashboard">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-6">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      User
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-sm-6 text-right">
                <a href="javascript:void(0);" onclick="modal_tambah();" class="btn btn-primary"><span class="fa fa-plus"></span> Tambah</a>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    Data User
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <form id="form_search" class="text-left">
                          <div class="d-inline-block">
                            <div class="input-group mb-3">
                              <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Nama User">
                              <div class="input-group-append">
                                <button class="btn btn-primary" type="submit"><span class="fa fa-search"></span></button>
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                      <div class="col-md-6 text-right">
                      </div>
                    </div>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>User</th>
                            <th>Level</th>
                            <th>Aksi</th>
                          </tr>
                        </thead>
                        <tbody id="listdata">

                        </tbody>
                      </table>
                    </div>
                    <div class="text-center" id="pagination">
                    </div>
                    <br>
                    <div class="d-inline-block">
                      <table class="table table-sm table-borderless">
                        <tr>
                          <td>Admin</td>
                          <td> : </td>
                          <td>Bisa mengakses semua halaman</td>
                        </tr>
                        <tr>
                          <td>Umum</td>
                          <td> : </td>
                          <td>Bisa mengakses semua halaman kecuali menu user</td>
                        </tr>
                        <tr>
                          <td>Keuangan</td>
                          <td> : </td>
                          <td>Bisa mengakses halaman Dashboard, Pembayaran dan Member</td>
                        </tr>
                        <tr>
                          <td>Teknisi</td>
                          <td> : </td>
                          <td>Bisa memilih router dan mengakses menu monitoring dan user manager beserta sub menunya</td>
                        </tr>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <br>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
      <div class="modal" id="modal_form">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modal_form_title"></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form id="form_data">
              <div class="modal-body">
                <input type="hidden" id="id" name="id" />
                <div class="form-group" id="div_nama">
                  <label class="control-label">
                    Nama
                  </label>
                  <input type="text" id="nama" name="nama" class="form-control" placeholder="Nama User" required />
                </div>
                <div class="form-group" id="div_user">
                  <label class="control-label">
                    User
                  </label>
                  <input type="text" id="user" name="user" class="form-control" placeholder="Username" required />
                </div>
                <div class="form-group" id="div_level">
                  <label class="control-label">
                    Level
                  </label>
                  <select id="level" name="level" class="form-control">
                    <option value="1">Umum</option>
                    <option value="2">Admin</option>
                    <option value="3">Keuangan</option>
                    <option value="4">Teknisi</option>
                  </select>
                </div>
                <div class="form-group" id="div_parent_user_id" style="display:none;">
                  <label class="control-label">
                    Induk User
                  </label>
                  <select id="parent_user_id" name="parent_user_id" class="form-control">
                  </select>
                </div>
                <div class="form-group" id="div_password">
                  <label class="control-label">
                    Password
                  </label>
                  <input type="password" id="password" name="password" class="form-control" placeholder="Password User" required />
                  <input type="hidden" id="hidden_password" name="hidden_password" />
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/user.js"></script>
  </body>
</html>
