<html>
  {{> head}}
  <body class="dashboard">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-6">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      User
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-sm-6 text-right">
                <a href="javascript:void(0);" onclick="modal_tambah();" class="btn btn-primary"><span class="fa fa-plus"></span> Tambah</a>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    Data User
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <form id="form_search" class="text-left">
                          <div class="d-inline-block">
                            <div class="input-group mb-3">
                              <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Nama User">
                              <div class="input-group-append">
                                <button class="btn btn-primary" type="submit"><span class="fa fa-search"></span></button>
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                      <div class="col-md-6 text-right">
                      </div>
                    </div>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>User</th>
                            <th>Level</th>
                            <th>Status</th>
                            <th>Aksi</th>
                          </tr>
                        </thead>
                        <tbody id="listdata">

                        </tbody>
                      </table>
                    </div>
                    <div class="text-center" id="pagination">
                    </div>
                    <br>
                    <div class="d-inline-block">
                      <table class="table table-sm table-borderless">
                        <tr>
                          <td>Admin</td>
                          <td> : </td>
                          <td>Bisa mengakses semua halaman</td>
                        </tr>
                        <tr>
                          <td>Umum</td>
                          <td> : </td>
                          <td>Bisa mengakses semua halaman kecuali menu user dan menu backup database</td>
                        </tr>
                        <tr>
                          <td>Keuangan</td>
                          <td> : </td>
                          <td>Bisa mengakses halaman Dashboard, Pembayaran dan Member</td>
                        </tr>
                        <tr>
                          <td>Teknisi</td>
                          <td> : </td>
                          <td>Bisa memilih router dan mengakses menu monitoring dan user manager beserta sub menunya</td>
                        </tr>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <br>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
      <div class="modal" id="modal_form">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modal_form_title"></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form id="form_data">
              <div class="modal-body">
                <input type="hidden" id="id" name="id" />
                <div class="form-group" id="div_nama">
                  <label class="control-label">
                    Nama
                  </label>
                  <input type="text" id="nama" name="nama" class="form-control" placeholder="Nama User" required />
                </div>
                <div class="form-group" id="div_nik">
                  <label class="control-label">
                    NIK
                  </label>
                  <input type="text" id="nik" name="nik" class="form-control" placeholder="Nomor Induk Karyawan" />
                </div>
                <div class="form-group" id="div_email">
                  <label class="control-label">
                    Email
                  </label>
                  <input type="text" id="email" name="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group" id="div_alamat">
                  <label class="control-label">
                    Alamat
                  </label>
                  <textarea id="alamat" name="alamat" class="form-control" placeholder="Alamat"></textarea>
                </div>
                <div class="form-group" id="div_file_npwp">
                  <label class="control-label">
                    File NPWP
                  </label>
                  <div class="row">
                    <div class="col-md-8">
                      <div class="custom-file">
                          <input type="file" class="custom-file-input" id="file_npwp" name="file_npwp" accept="image/jpeg, image/png">
                          <label class="custom-file-label" for="icon_website">Pilih Gambar</label>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <img id="img_npwp" name="img_npwp" style="max-width:100%;width:auto;" />
                    </div>
                  </div>
                </div>
                <div class="form-group" id="div_file_ktp">
                  <label class="control-label">
                    File KTP
                  </label>
                  <div class="row">
                    <div class="col-md-8">
                      <div class="custom-file">
                          <input type="file" class="custom-file-input" id="file_ktp" name="file_ktp" accept="image/jpeg, image/png">
                          <label class="custom-file-label" for="icon_website">Pilih Gambar</label>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <img id="img_ktp" name="img_ktp" style="max-width:100%;width:auto;" />
                    </div>
                  </div>
                </div>
                <div class="form-group" id="div_user">
                  <label class="control-label">
                    Username
                  </label>
                  <input type="text" id="user" name="user" class="form-control" placeholder="Username" required />
                </div>
                <div class="form-group" id="div_level">
                  <label class="control-label">
                    Level
                  </label>
                  <select id="level" name="level" class="form-control">
                    <option value="1">Umum</option>
                    <option value="2">Admin</option>
                    <option value="3">Keuangan</option>
                    <option value="4">Teknisi</option>
                  </select>
                </div>
                <div class="form-group" id="div_status">
                  <label class="control-label">
                    Status
                  </label>
                  <select id="status" name="status" class="form-control">
                    <option value="1">Aktif</option>
                    <option value="0">Tidak Aktif</option>
                  </select>
                </div>
                <div class="form-group" id="div_parent_user_id" style="display:none;">
                  <label class="control-label">
                    Induk User
                  </label>
                  <select id="parent_user_id" name="parent_user_id" class="form-control">
                  </select>
                </div>
                <div class="form-group" id="div_password">
                  <label class="control-label">
                    Password
                  </label>
                  <input type="password" id="password" name="password" class="form-control" placeholder="Password User" required />
                  <input type="hidden" id="hidden_password" name="hidden_password" />
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="modal" id="modal_mou" >
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <form id="form_mou" class="text-left">
              <div class="modal-header">
                <h5 class="modal-title" id="modal_title_mou"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="control-label">
                          Nomor MoU
                        </label>
                        <input id="nomor" name="nomor" type="text" class="form-control" placeholder="Nomor MoU" />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="control-label">
                          Tanggal
                        </label>
                        <input id="tgl" name="tgl" type="date" class="form-control" placeholder="Tanggal" />
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="control-label">
                          Nama Perusahaan Pihak 2
                        </label>
                        <input type="text" id="nama_perusahaan" name="nama_perusahaan" class="form-control" placeholder="Nama Pihak 1" />
                      </div>
                      <hr>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="control-label">
                          Nama Pihak 1
                        </label>
                        <input type="text" id="nama_pihak1" name="nama_pihak1" class="form-control" placeholder="Nama Pihak 1" />
                      </div>
                      <div class="form-group">
                        <label class="control-label">
                          NIK Pihak 1
                        </label>
                        <input type="text" id="nik_pihak1" name="nik_pihak1" class="form-control" placeholder="NIK Pihak 1" />
                      </div>
                      <div class="form-group">
                        <label class="control-label">
                          Jabatan Pihak 1
                        </label>
                        <input type="text" id="jabatan_pihak1" name="jabatan_pihak1" class="form-control" placeholder="Nama Jabatan Pihak 1" />
                      </div>
                      <div class="form-group">
                        <label class="control-label">
                          Jabatan Pihak 1 di bawah Tanda Tangan
                        </label>
                        <input type="text" id="jabatan_ttd_pihak1" name="jabatan_ttd_pihak1" class="form-control" placeholder="Nama Jabatan Pihak 1" />
                      </div>
                      <div class="form-group">
                        <label class="control-label">
                          Alamat Pihak 1
                        </label>
                        <textarea id="alamat_pihak1" name="alamat_pihak1" class="form-control" placeholder="Alamat Pihak 1" rows="4"></textarea>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="control-label">
                          Nama Pihak 2
                        </label>
                        <input type="text" id="nama_pihak2" name="nama_pihak2" class="form-control" placeholder="Nama Pihak 2" />
                      </div>
                      <div class="form-group">
                        <label class="control-label">
                          NIK Pihak 2
                        </label>
                        <input type="text" id="nik_pihak2" name="nik_pihak2" class="form-control" placeholder="NIK Pihak 2" />
                      </div>
                      <div class="form-group">
                        <label class="control-label">
                          Jabatan Pihak 2
                        </label>
                        <input type="text" id="jabatan_pihak2" name="jabatan_pihak2" class="form-control" placeholder="Nama Jabatan Pihak 2" />
                      </div>
                      <div class="form-group">
                        <label class="control-label">
                          Jabatan Pihak 2 di bawah Tanda Tangan
                        </label>
                        <input type="text" id="jabatan_ttd_pihak2" name="jabatan_ttd_pihak2" class="form-control" placeholder="Nama Jabatan Pihak 2" />
                      </div>
                      <div class="form-group">
                        <label class="control-label">
                          Alamat Pihak 2
                        </label>
                        <textarea id="alamat_pihak2" name="alamat_pihak2" class="form-control" placeholder="Alamat Pihak 2" rows="4"></textarea>
                      </div>
                    </div>
                    <div class="col-md-12"><hr /></div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="control-label">
                          Penjualan Aktif Internet Paling Cepat
                        </label>
                        <input id="penjualan_paling_cepat" name="penjualan_paling_cepat" type="date" class="form-control" placeholder="Tanggal" />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="control-label">
                          Penjualan Aktif Internet Paling Lambat
                        </label>
                        <input id="penjualan_paling_lambat" name="penjualan_paling_lambat" type="date" class="form-control" placeholder="Tanggal" />
                      </div>
                    </div>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-light" onclick="generate_pdf()">Generate & Download</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="modal" id="modal_file">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modal_file_title">File</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="form_file">
                <div class="form-group">
                  <input type="text" id="nama_file" name="nama_file" class="form-control" placeholder="Nama File" required />
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="custom-file overflow-hidden">
                          <input type="file" class="custom-file-input" id="file_file" name="file_file">
                          <label class="custom-file-label" for="icon_website">Pilih File</label>
                      </div>
                    </div>
                    <div class="col-md-6 text-right">
                      <button type="submit" class="btn btn-primary"><span class="fa fa-save"></span> Tambah</button>
                    </div>
                  </div>
                </div>
              </form>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>File</th>
                    <th>Aksi</th>
                  </tr>
                </thead>
                <tbody id="listdata_file">

                </tbody>
              </table>
              <div id="pagination_file" class="text-center"></div>
            </div>
          </div>
         </div>
       </div>
    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/user.js"></script>
  </body>
</html>
