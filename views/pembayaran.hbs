                        <tbody id="listdata2">
                          <tr><td colspan="8">Memuat Data ....</td></tr>
                        </tbody>
                      </table>
                    </div>
                    <div class="row">
                      <div class="col-md-4" id="info_page2">

                      </div>
                      <div class="col-md-4 text-center" id="pagination2">
                      </div>
                      <div class="col-md-4"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <br><br>
        </div>
      </div>
