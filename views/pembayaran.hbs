                        <tbody id="listdata">
                          <tr><td colspan="15">Memuat Data ....</td></tr>
                        </tbody>
                      </table>
                    </div>
                    <div class="row">
                      <div class="col-md-4" id="info_page">

                      </div>
                      <div class="col-md-4 text-center" id="pagination">
