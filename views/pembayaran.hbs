                <tr>
                  <td>Nama CLient</td>
                  <td>:</td>
                  <td id="modal_hapus_nama_client"></td>
                </tr>
                <tr>
                  <td>Nama Tagihan</td>
                  <td>:</td>
                  <td id="modal_hapus_nama_tagihan"></td>
                </tr>
                <tr>
                  <td>Bulan & Tahun</td>
                  <td>:</td>
                  <td id="modal_hapus_bulan_tahun"></td>
                </tr>
                <tr>
                  <td>Nominal Bayar</td>
                  <td>:</td>
                  <td id="modal_hapus_nominal_bayar"></td>
                </tr>
