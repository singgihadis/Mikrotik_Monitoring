                  <td>:</td>
                  <td>
                    <input id="modal_hapus_password" name="modal_hapus_password" type="password" class="form-control" placeholder="Masukkan password akun anda" required />
                    <input type="hidden" id="modal_hapus_hidden_password" name="modal_hapus_hidden_password" />
                  </td>
                </tr>
              </table>
              <div class="text-right">
                <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
                <button id="btn_submit_hapus" type="submit" class="btn btn-danger">Hapus</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
