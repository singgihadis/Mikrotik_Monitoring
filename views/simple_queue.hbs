<html>
  {{> head}}
  <body class="dns">
    <div class="d-flex" id="wrapper">
      {{> sidebar}}
      <div id="page-content-wrapper">
        {{> navbar}}
        <div class="container-fluid">
            <div class="row mt-4">
              <div class="col-sm-6">
                <div class="breadcrumb-custom">
                  <ul>
                    <li>
                      <a href="/">Home</a>
                    </li>
                    <li class="active">
                      Simple Queue
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-sm-6 text-right">

              </div>
            </div>
            <br>
            <div class="row mt-2">
              <div class="col-md-12">
                <div class="card stat-card">
                  <div class="card-header bg-gradient-primary text-white">
                    Simple Queue
                    <div id="loader_insert_data" class="mt-1 d-inline-block float-right">
                      <span class="fa fa-spin fa-spinner d-table-cell align-middle"></span> <small class="pl-1 d-table-cell align-middle">Sinkron data PPP dari Router</small>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-7">
                        <form id="form_data" class="text-left">
                          <div class="d-inline-block mr-2">
                            <div class="input-group mb-3">
                              <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Keyword">
                              <div class="input-group-append">
                                <button class="btn btn-primary" type="submit"><span class="fa fa-search"></span></button>
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                      <div class="col-md-5 text-right">

                      </div>
                    </div>
                    <div class="table-responsive">
                      <table class="table table-striped" id="table_dns_cache">
                        <thead>
                          <tr>
                            <th rowspan="2">No</th>
                            <th rowspan="2">Name</th>
                            <th rowspan="2">Id Simple Queue</th>
                            <th rowspan="2" class="border-right">Target</th>
                            <th colspan="2" class="text-center">Max Limit</th>
                          </tr>
                          <tr>
                            <th>Upload</th>
                            <th>Download</th>
                          </tr>
                        </thead>
                        <tbody id="listdata">
                          <tr><td colspan="6">Memuat Data ....</td></tr>
                        </tbody>
                      </table>
                    </div>
                    <div class="row">
                      <div class="col-md-4" id="info_page">

                      </div>
                      <div class="col-md-4 text-center" id="pagination">
                      </div>
                      <div class="col-md-4"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <br><br>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    {{> foot}}
    <script type="text/javascript" src="/assets/js/page/simple_queue.js"></script>
  </body>
</html>
